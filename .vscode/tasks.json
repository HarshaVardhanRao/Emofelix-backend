{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Django Server",
			"type": "shell",
			"command": "python",
			"args": [
				"manage.py",
				"runserver",
				"8000"
			],
			"options": {
				"cwd": "${workspaceFolder}/Backend/core"
			},
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Start FastAPI Server",
			"type": "shell",
			"command": "uvicorn",
			"args": [
				"main:app",
				"--reload",
				"--port",
				"8001"
			],
			"options": {
				"cwd": "${workspaceFolder}/FastAPI_services"
			},
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Start Frontend Dev Server",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Start All Services",
			"dependsOrder": "parallel",
			"dependsOn": [
				"Start Django Server",
				"Start FastAPI Server",
				"Start Frontend Dev Server"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Run Service Launcher (PowerShell)",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/start_services.ps1"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new",
				"showReuseMessage": false,
				"clear": true
			}
		},
		{
			"label": "Run Service Launcher (Batch)",
			"type": "shell",
			"command": "${workspaceFolder}/start_services.bat",
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new",
				"showReuseMessage": false,
				"clear": true
			}
		},
		{
			"label": "Run Service Launcher (Python)",
			"type": "shell",
			"command": "python",
			"args": [
				"start_services.py"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "new",
				"showReuseMessage": false,
				"clear": true
			}
		}
	]
}